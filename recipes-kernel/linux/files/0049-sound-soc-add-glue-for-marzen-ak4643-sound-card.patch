+
+#undef DEBUG
+#ifdef DEBUG
+#define FNC_ENTRY	pr_info("entry:%s\n", __func__);
+#define FNC_EXIT	pr_info("exit:%s:%d\n", __func__, __LINE__);
+#define DBG_CHK_POINT()	pr_info("check:%s:%d\n", __func__, __LINE__);
+#define DBG_CHK_MSG(args...)	pr_info(args)
+#else  /* DEBUG */
